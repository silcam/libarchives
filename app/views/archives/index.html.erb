<p id="notice"><%= notice %></p>

<h1>Archives</h1>

<%= link_to 'New Archive', new_archive_path %>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Document type</th>
      <th>Year</th>
      <th>Title</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @archives.each do |archive| %>
      <tr>
        <td><%= archive.number %></td>
        <td><%= archive.document_type_name %></td>
        <td><%= archive.year %></td>
        <td><%= archive.title %></td>
        <td><%= archive.language_name %></td>
        <td><%= link_to 'Show', archive %></td>
        <td><%= link_to 'Edit', edit_archive_path(archive) %></td>
        <td><%= link_to 'Destroy', archive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

