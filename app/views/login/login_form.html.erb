
<% unless @message.blank? %>
    <p class="alert alert-danger">
      <%= @message %>
    </p>
<% end %>

<%= form_tag '/login', method: :post do %>
  <%= label_tag 'Enter password to edit entries:' %>
  <%= password_field_tag :password, '' %>
  <%= submit_tag 'Submit', class: 'btn btn-lg btn-primary' %>
<% end %>